<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#565656">



    <TextView
        android:text="TELEFON NO:"
        android:layout_width="100dp"
        android:id="@+id/tvTelefon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:gravity="left|center_vertical"
        android:textColor="#ed4609"
        android:layout_height="50dp" />

    <TextView
        android:text="+90 212 285 3953"
        android:layout_width="match_parent"
        android:id="@+id/tvTelefonShow"
        android:layout_marginTop="30dp"
        android:textColor="#ed4609"
        android:gravity="left|center_vertical|center_horizontal"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/tvTelefon" />


    <!-- ........................................................-->

    <TextView
        android:text="ADRES:"
        android:layout_width="100dp"
        android:layout_marginTop="20dp"
        android:id="@+id/tvAdres"
        android:layout_marginLeft="10dp"
        android:gravity="left|center_vertical"
        android:textColor="#ed4609"
        android:layout_height="50dp"
        android:layout_below="@+id/tvTelefon" />

    <TextView
        android:text=" İTÜ Ayazağa Yerleşkesi Rektörlük Binası Kat:2 B Blok Maslak SARIYER İSTANBUL 34469 TÜRKİYE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvAdresShow"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#ed4609"
        android:gravity="left|center_vertical"
        android:layout_toEndOf="@+id/tvAdres"
        android:layout_below="@+id/tvTelefonShow" />

    <!-- ........................................................-->

    <TextView
        android:text="MAIL:"
        android:layout_width="100dp"
        android:id="@+id/tvMail"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:gravity="left|center_vertical"
        android:textColor="#ed4609"
        android:layout_height="50dp"
        android:layout_below="@+id/tvAdres" />

    <TextView
        android:text="sksbask@itu.edu.tr"
        android:layout_width="match_parent"
        android:id="@+id/tvMailShow"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#ed4609"
        android:gravity="left|center_vertical|center_horizontal"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/tvMail"
        android:layout_below="@+id/tvAdresShow" />

    <!-- ........................................................-->

    <TextView
        android:text="FAX NO:"
        android:layout_width="100dp"
        android:id="@+id/tvFax"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:gravity="left|center_vertical"
        android:textColor="#ed4609"
        android:layout_height="50dp"
        android:layout_below="@+id/tvMail" />

    <TextView
        android:text="+90 212 285 7155"
        android:layout_width="match_parent"
        android:id="@+id/tvFaxShow"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#ed4609"
        android:gravity="left|center_vertical|center_horizontal"
        android:layout_height="50dp"
        android:layout_below="@+id/tvMailShow"
        android:layout_toEndOf="@+id/tvFax" />

    <!-- ........................................................-->


    <ImageView
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:id="@+id/ivlogo"
        android:alpha="0.2"
        android:layout_alignParentEnd="false"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>