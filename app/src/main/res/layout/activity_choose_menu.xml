<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ozgur.itu_yemekhane.ChooseMenu"
    android:background="#565656">

    <Button
        android:text="ANA YEMEKLER"
        android:layout_width="match_parent"
        android:layout_below="@+id/bnSoup"
        android:layout_alignStart="@+id/bnSoup"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:id="@+id/bnMainCourse"
        android:layout_height="50dp"
        android:textColor="#ed4609"/>

    <Button
        android:text="YARDIMCI YEMEKLER"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/bnMainCourse"
        android:layout_alignStart="@+id/bnMainCourse"
        android:layout_marginTop="30dp"
        android:id="@+id/bnSideCourse"
        android:textColor="#ed4609"/>

    <Button
        android:text="Ã‡ORBALAR"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="60dp"
        android:id="@+id/bnSoup"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ed4609"/>

    <Button
        android:text="SALATA VE TATLILAR"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:id="@+id/bnSaladDessert"
        android:layout_below="@+id/bnSideCourse"
        android:layout_alignParentStart="true"
        android:textColor="#ed4609"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:id="@+id/ivlogo"
        android:alpha="0.2"
        android:layout_alignParentEnd="false"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>
