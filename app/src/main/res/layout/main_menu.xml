<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#565656">


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tvDate" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginTop="60dp" android:textStyle="bold"
        android:textSize="30sp" android:textColor="#ed4609" android:gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tvMeal1"
        android:textStyle="bold" android:textSize="30sp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ed4609"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/tvDate"
        android:layout_marginTop="10dp" />

    <TextView android:layout_width="match_parent"
        android:id="@+id/tvMeal2"
        android:textStyle="bold"
        android:textSize="30sp" android:layout_marginTop="10dp" android:gravity="center_vertical|center_horizontal"
        android:textColor="#ed4609"
        android:layout_below="@+id/tvMeal1"
        android:layout_height="wrap_content" />

    <TextView android:layout_width="match_parent"
        android:id="@+id/tvMeal3" android:textStyle="bold" android:textSize="30sp"
        android:layout_below="@+id/tvMeal2" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:gravity="center_vertical|center_horizontal"
        android:textColor="#ed4609"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        tools:ignore="RtlHardcoded" />

    <TextView android:layout_width="match_parent"
        android:id="@+id/tvMeal4"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ed4609"
        android:layout_below="@+id/tvMeal3"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:id="@+id/ivlogo"
        android:layout_alignParentTop="false"
        android:alpha="0.2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <Button
        android:text="YEMEK ÇEŞİTLERİ"
        android:layout_width="120dp"
        android:id="@+id/bnVariaty"
        android:background="@color/colorPrimary"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:layout_marginStart="21dp"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/tvMeal4"
        android:layout_marginTop="40dp" />

    <Button
        android:text="İLETİŞİM"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/bnContact"
        android:layout_centerInParent="false"
        android:layout_alignWithParentIfMissing="false"
        android:background="@color/colorPrimary"
        android:textSize="12sp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/tvMeal4"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />

</RelativeLayout>